<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Employee Record</title>
    <style>
        body {
            background-color: #ffffcc; /* Light yellow background */
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        a {
            text-decoration: none;
            color: #333; /* Dark grey for links */
            margin-right: 10px;
        }

        a:hover {
            color: #666; /* Dark grey on hover */
        }

        .container {
            max-width: 800px;
            margin: 20px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h1 {
            color: #e0201c; /* Red heading */
            border-bottom: 2px solid #e0201c; /* Red underline */
            padding-bottom: 10px;
            margin-bottom: 20px;
            text-align: center;
        }

        hr {
            border: 0;
            height: 5px;
            background-color: #e0201c; /* Red horizontal line */
            margin: 20px 0;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #0077be;
            color: white;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .no-record {
            text-align: center;
            color: #e0201c; /* Red text for no record message */
        }

        .footer {
            text-align: center;
            margin-top: 20px;
            color: #666; /* Dark grey text */
        }
    </style>
</head>
<body>
    <div class="container">
        <a href="/">Home</a> |
        <a href="/about">About</a> |
        <a href="/insert">Insert</a> |
        <a href="/display">Display</a> |
        <a href="/search">Search</a> |
        <a href="Update">Update</a> |

        <hr>

        <h1>Search Record of Employee</h1>

        <form method="post" action="/datasearch">
            Enter Empno : <input type="text" name="empno">
            <button>Search</button>
        </form>

        <hr>

        <table>
            <tr>
                <th>Empno</th>
                <th>Emp Name</th>
                <th>City</th>
                <th>Salary</th>
            </tr>
            <% if (mystatus) {
                let mylen = myData.length;
                if (mylen > 0) {
                    myData.forEach((key) => { %>
                        <tr>
                            <td><%= key.employeeNo %></td>
                            <td><%= key.employeeName %></td>
                            <td><%= key.employeeCity %></td>
                            <td><%= key.employeeSalary %></td>
                        </tr>
                    <% });
                } else { %>
                    <tr>
                        <td colspan="4" class="no-record">No record Found For this Empno</td>
                    </tr>
                <% }
            } %>
        </table>

        <hr>

        <p class="footer">www.Innomitra.com</p>
    </div>
</body>
</html>
